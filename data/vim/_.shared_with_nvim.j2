" Shared configuration for `vim` and `nvim`


" Overall appearance
colors desert        " Choose cholorscheme
syntax on            " Enable syntax-highlighting

" Lines
set cursorline
"set number           " Display absolute line numbers
set relativenumber   " Display relative line numbers
set showmatch
set wrap             " Enable wrapping 

" Indenting
set autoindent                     " Enable autoindenting
set cc=80,100                      " Highlight far columns
set expandtab                      " Replace tabs with spaces
set shiftwidth={{editor.tabSize}}  " Width for autoindents
set softtabstop={{editor.tabSize}} " See multiple spaces as tabstops so <BS> is sane
set tabstop={{editor.tabSize}}     " Tabs display as {{editor.tabSize}} spaces
filetype plugin indent on          " Allow auto-indenting depending on file type

" Searching
set hlsearch
set incsearch

" Splits
set splitright
set splitbelow

" Miscellaneous
filetype plugin on
set autochdir             " Change working directory to currently opened file
set clipboard=unnamedplus " Use system clipboard
set ignorecase
set ttyfast               " Speed up scrolling in Vim

