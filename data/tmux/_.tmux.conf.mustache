set -g mouse on # Enable mouse mode (tmux 2.1 and above)
setw -g mode-keys vi

# Start window and pane counting at 1 instead of 0 (not because it's logical, but because 1 is easier to reach on the keyboard)
set -g base-index 1
setw -g pane-base-index 1

